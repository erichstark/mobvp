<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorMyAzure"
    tools:context=".AccountInfoActivity">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@color/colorMyWhite">

        <TextView
            android:id="@+id/info_accountinfo_label"
            android:text="Account info"
            android:textSize="25dp"
            android:layout_marginBottom="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMyDarkness"/>

        <TextView
            android:id="@+id/info_name_label"
            android:text="Name:"
            android:textSize="18dp"
            android:layout_below="@id/info_accountinfo_label"
            android:width="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/info_name"
            android:hint="Pavol Nemec"
            android:textSize="18dp"
            android:layout_below="@id/info_accountinfo_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMyDarkness"
            android:layout_toRightOf="@id/info_name_label"/>

        <TextView
            android:id="@+id/info_username_label"
            android:text="Username:"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/info_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/info_username"
            android:hint="xnemecp"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMyDarkness"
            android:layout_toRightOf="@id/info_name_label"/>

        <TextView
            android:id="@+id/info_userid_label"
            android:text="User ID:"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/info_username_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/info_userid"
            android:hint="42"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/info_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMyDarkness"
            android:layout_toRightOf="@id/info_name_label"/>

        <TextView
            android:id="@+id/info_token_label"
            android:text="Token:"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/info_userid_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/info_token"
            android:hint="5Qdy5FNCjHbKmSwoXkNi"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/info_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMyDarkness"
            android:layout_toRightOf="@id/info_name_label"/>


    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:background="@color/colorMyWhite">

        <TextView
            android:id="@+id/info_numberinfo_label"
            android:text="Random number"
            android:textSize="25dp"
            android:layout_marginBottom="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMyDarkness"/>

        <TextView
            android:id="@+id/info_number_label"
            android:text="Number:"
            android:textSize="18dp"
            android:layout_below="@id/info_numberinfo_label"
            android:width="110dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/info_number"
            android:textSize="18dp"
            android:layout_below="@id/info_numberinfo_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMyDarkness"
            android:layout_toRightOf="@id/info_number_label"/>

        <Button
            android:id="@+id/info_submit"
            android:layout_below="@id/info_number"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:text="Generate Random Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorMyDark"
            android:textColor="@color/colorMyWhite"
            android:onClick="submitOnClick"/>

    </RelativeLayout>
</LinearLayout>
