<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:background="@color/colorMyWhite">

        <TextView
            android:id="@+id/info_numberinfo_label"
            android:text="Random number"
            android:textSize="25dp"
            android:layout_marginBottom="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMyDarkness"/>

        <TextView
            android:id="@+id/info_number_label"
            android:text="Number:"
            android:textSize="18dp"
            android:layout_below="@id/info_numberinfo_label"
            android:width="110dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/info_number"
            android:textSize="18dp"
            android:layout_below="@id/info_numberinfo_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMyDarkness"
            android:layout_toRightOf="@id/info_number_label"/>

        <Button
            android:id="@+id/info_submit"
            android:layout_below="@id/info_number"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:text="Generate Random Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorMyDark"
            android:textColor="@color/colorMyWhite"
            />

    </RelativeLayout>

</LinearLayout>